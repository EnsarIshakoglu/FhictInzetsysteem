@using Microsoft.EntityFrameworkCore.Internal
@model IEnumerable<Preference>

@{
    ViewData["Title"] = "OnderwijsTrajectPartialView";
}
<body>
        <div class="carousel-wrapper">
            <span id="item-1"></span>
            <span id="item-2"></span>
            <span id="item-3"></span>
            <span id="item-4"></span>
            <div class="carousel-item item-1">
                <h4>Kies een richting</h4>
                <p>text....</p>
                <div class="parent-btn">
                    <a>
                        <form method="post" asp-controller="Preference" asp-action="GetTrajectPreferences">
                            @foreach (var voorkeur in @Model)
                            {
                                <div>
                                    @Html.Partial("PartialViews/RadioButtons", voorkeur)

                                </div>
                            }
                            <center><input class="btn-voorkeur" type="submit" value="Save"></center>
                            <center><input class="btn-voorkeur" type="button" value="terug"></center>
                        </form>
                    </a>
                </div>
            </div>
        </div>
</body>