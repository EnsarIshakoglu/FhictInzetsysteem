@using FHICTDeploymentSystem.Controllers
@using FHICTDeploymentSystem.Logic
@using FHICTDeploymentSystem.Models
@using Microsoft.EntityFrameworkCore.Infrastructure
@using Task = FHICTDeploymentSystem.Models.EducationObject
@model Preference

@{
    Task task = new Task();
    if (Model.Task.GetType() == typeof(Task))
    {
        task = (Task)Model.Task;
    }
}


<link href="~/lib/bootstrap/dist/css/radio-btn-bootstrap.css" rel="stylesheet" />

<div class="container">
    <div class="row">

        <div class="col-md-5th-1 col-sm-4 ">

            @if (!Model.ValueIsAverage)
            {
            <ul>
                <li>@task.Period | @Model.Task.Name</li>
                <li>@task.Description</li>
            </ul>
            }
            else
            {

                <a href="@Url.Action("RedirectLayer", "Preference", new {educationType = @Model.Task.EducationType, id = @Model.Task.Id})"><span>@Model.Task.Name</span></a>
            }

        </div>
        @for (int x = 0; x < 5; x++)
        {
            string defCheck = null;

            if (@Model.Value == x)
            {
                defCheck = "checked";
            }
            <div class="col-md-5th-1 col-sm-4 col-md-offset-0 col-sm-offset-2">
                <input id="Value" name='@Model.Task.Id' type="radio" value=@x ; @defCheck><span>@x</span>
            </div>

        }


    </div>
</div>


<style>
    div [class*="col-"] {
        text-align: center;
        padding: 20px;
        border: 3px solid #fff;
        color: #000;
    }
</style>