@model Voorkeur

<link href="~/lib/bootstrap/dist/css/radio-btn-bootstrap.css" rel="stylesheet" />

<div class="container">
    <div class="row">

        <div class="col-md-5th-1 col-sm-4 ">
            <span>@Model.Taak.Naam</span>
        </div>
        @for (int x = 0; x < 5; x++)
        {
            string defCheck = null;
            int value = x;
            if (x == 0)
            {
                value = 3;
            } else if (x > 2)
            {
                value++;
            }
            if (@Model.Waarde == x)
            {
                defCheck = "checked";
            }
                <div class="col-md-5th-1 col-sm-4 col-md-offset-0 col-sm-offset-2">
                    <input id="Waarde" name=@Model.Taak.Naam type="radio" value=@value ; @defCheck><span>@x</span>
                </div>

        }


    </div>
</div>


<style>
    div [class*="col-"] {
        text-align: center;
        padding: 20px;
        border: 3px solid #fff;
        color: #000;
    }
</style>