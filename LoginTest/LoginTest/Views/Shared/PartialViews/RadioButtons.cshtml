@using Inzetsysteem.Controllers
@using Inzetsysteem.Logic
@model Preference

<link href="~/lib/bootstrap/dist/css/radio-btn-bootstrap.css" rel="stylesheet" />

<div class="container">
    <div class="row">

        <div class="col l6 ">
            @if (!Model.WaardeIsAverage)
            {
            <a class="btn-voorkeur btn-voorkeur-next"><p>@Model.Taak.Naam</p></a>
            }
            else
            {
                <a href="@Url.Action("RedirectLayer", "Preference", new {taakNaam = @Model.Taak.GetType().Name, id = @Model.Taak.Id})" class="btn-voorkeur btn-voorkeur-next"><p>@Model.Taak.Naam</p></a>
            }

        </div>
        @for (int x = 0; x < 5; x++)
        {
            string defCheck = null;

            if (@Model.Waarde == x)
            {
                defCheck = "checked";
            }
            <div class="col-md-5th-1 col-sm-4 col-md-offset-0 col-sm-offset-2">
                <input id="Waarde" name=@Model.Taak.Naam type="radio" value=@x ; @defCheck><span>@x</span>
            </div>

        }


    </div>
</div>


<style>
    div [class*="col-"] {
        text-align: center;
        padding: 20px;
        border: 3px solid #fff;
        color: #000;
    }
</style>